{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "bin": "./dist/src/bin/hint.js",
  "dependencies": {
    "@hint/utils": "^1.0.0",
    "ajv": "^6.10.0",
    "applicationinsights": "^1.3.1",
    "boxen": "^3.1.0",
    "browserslist": "^4.5.4",
    "chalk": "^2.4.2",
    "configstore": "^4.0.0",
    "content-type": "^1.0.4",
    "css-select": "^2.0.2",
    "eventemitter2": "^5.0.1",
    "file-type": "^10.11.0",
    "globby": "^9.2.0",
    "is-ci": "^2.0.0",
    "is-svg": "^4.1.0",
    "jsonc-parser": "^2.1.0",
    "lodash": "^4.17.11",
    "optionator": "^0.8.2",
    "ora": "^3.4.0",
    "semver": "^6.0.0",
    "update-notifier": "^2.5.0"
  },
  "description": "The linting tool for the web",
  "devDependencies": {
    "@types/async": "^2.4.1",
    "@types/content-type": "^1.1.3",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.13.4",
    "@types/semver": "^6.0.0",
    "@types/sinon": "^7.0.11",
    "@types/update-notifier": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "ava": "^1.4.1",
    "cpx": "^1.5.0",
    "eslint": "^5.15.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-markdown": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.0.0",
    "proxyquire": "2.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.1",
    "typescript": "^3.4.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    ".hintrc",
    "dist/src",
    "dist/tests/helpers",
    "docs"
  ],
  "homepage": "https://webhint.io/",
  "keywords": [
    "a11y",
    "accessibility",
    "best-practices",
    "compatibility",
    "lint",
    "performance",
    "security"
  ],
  "license": "Apache-2.0",
  "main": "./dist/src/lib/index.js",
  "name": "hint",
  "nyc": {
    "branches": 75,
    "extends": "../../.nycrc",
    "include": [
      "dist/src/**/*.js"
    ]
  },
  "optionalDependencies": {
    "@hint/configuration-web-recommended": "^6.1.0"
  },
  "repository": "https://github.com/webhintio/hint",
  "scripts": {
    "ava": "ava",
    "build": "npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:dependencies": "node ../../scripts/lint-dependencies.js",
    "lint:md": "node ../../scripts/lint-markdown.js",
    "hint": "node dist/src/bin/hint",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava",
    "test-release": "npm run lint && npm run clean && npm run build:assets && tsc && npm run test-only",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:resources": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "4.5.0"
}

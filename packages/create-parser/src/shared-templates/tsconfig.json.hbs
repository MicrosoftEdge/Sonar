{{#if official}}{
    "compilerOptions": {
        "outDir": "dist",
        "strict": true
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "extends": "../../tsconfig.json",
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
}{{else}}{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "inlineSourceMap": true,
        "lib": [
            "es2017",
            "esnext",
            "esnext.asynciterable"
        ],
        "module": "commonjs",
        "newLine": "lf",
        "noUnusedLocals": true,
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "target": "esnext"
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
}{{/if}}

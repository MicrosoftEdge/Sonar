export default class {{capitalizedName}} extends Parser {
    public constructor(sonarwhal: Sonarwhal) {
        super(sonarwhal);

        {{#each events}}
        sonarwhal.on('{{event}}', this.{{handler}}.bind(this));
        {{/each}}
    }
    {{#each events}}

    private async {{handler}}({{varName}}: {{type}}) {

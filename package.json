{
  "ava": {
    "babel": {
      "presets": []
    },
    "failFast": false,
    "files": [
      "packages/*/dist/tests/{,**/}*.js"
    ],
    "timeout": "1m"
  },
  "devDependencies": {
    "@alrra/travis-scripts": "^3.0.1",
    "ava": "^0.25.0",
    "cpx": "^1.5.0",
    "eslint": "^4.17.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-typescript": "^0.8.1",
    "husky": "^0.14.3",
    "loop": "^3.0.2",
    "markdownlint-cli": "^0.7.0",
    "npm-link-check": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "sonarwhal": "^0.24.0",
    "typescript": "^2.6.2",
    "typescript-eslint-parser": "^12.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "greenkeeper": {
    "ignore": [
      "@types/node"
    ]
  },
  "private": true,
  "scripts": {
    "ava": "ava",
    "build": "yarn clean && yarn build:sonarwhal && loop \"yarn build\" --cwd packages/ --exclude sonarwhal --exclude rule-amp-validator",
    "build:sonarwhal": "cd packages/sonarwhal && yarn build",
    "clean": "rimraf dist packages/*/dist",
    "commitmsg": "node scripts/check-commit-message.js",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --report-unused-disable-directives",
    "lint:md": "markdownlint packages/**/*.md README.md",
    "preparecommitmsg": "node scripts/prepare-commit-message.js",
    "test": "yarn build && nyc ava",
    "test-on-travis": "yarn lint && yarn commitmsg && yarn build && nyc ava --concurrency=2 --timeout=2m"
  },
  "workspaces": [
    "packages/*"
  ]
}

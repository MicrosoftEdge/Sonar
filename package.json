{
  "private": true,
  "name": "sonar",
  "version": "0.0.1",
  "description": "Best practices tool for the web",
  "main": "./dist/lib/sonar.js",
  "scripts": {
    "build:assets": "cpx \"./src/**/*.!(ts)\" dist",
    "build:ts": "tsc --outDir dist --rootDir src",
    "build": "npm-run-all build:*",
    "lint": "eslint \"src/**/*.ts\"",
    "site": "node dist/bin/sonar --debug",
    "test": "npm run lint && npm run build && nyc ava",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:ts": "npm run build:ts -- --watch",
    "watch:test": "ava --watch",
    "watch:resources": "npm run build:assets -- -w --no-initial"
  },
  "repository": "MicrosoftEdge/Sonar",
  "keywords": [
    "best",
    "practices",
    "security",
    "a11y",
    "lint"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": "https://github.com/MicrosoftEdge/Sonar/issues",
  "homepage": "https://github.com/MicrosoftEdge/Sonar#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "debug": "^2.6.1",
    "eventemitter2": "^3.0.0",
    "file-url": "^2.0.2",
    "globby": "^6.1.0",
    "is-my-json-valid": "^2.15.0",
    "is-resolvable": "^1.0.0",
    "jsdom": "^9.11.0",
    "json-stable-stringify": "^1.0.1",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "optionator": "^0.8.2",
    "path-is-inside": "^1.0.2",
    "pify": "^2.3.0",
    "request": "^2.79.0",
    "require-uncached": "^1.0.3",
    "shelljs": "^0.7.6",
    "strip-bom": "^3.0.0",
    "strip-json-comments": "^2.0.1",
    "text-table": "^0.2.0",
    "user-home": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^7.0.5",
    "ava": "^0.18.2",
    "babel-cli": "^6.23.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-register": "^6.23.0",
    "cpx": "^1.5.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-typescript": "^0.1.0",
    "leche": "^2.1.2",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.1.2",
    "proxyquire": "^1.7.11",
    "sinon": "^1.17.7",
    "typedoc": "^0.5.7",
    "typescript": "^2.2.1",
    "typescript-eslint-parser": "^2.0.0"
  },
  "ava": {
    "files": [
      "dist/tests/**/*.js"
    ],
    "failFast": true,
    "timeout": "30s"
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "sourceMap": true,
    "instrument": true
  }
}

{
  "private": true,
  "name": "sonar",
  "version": "0.0.1",
  "description": "Best practices tool for the web",
  "main": "./dist/src/lib/sonar.js",
  "scripts": {
    "ava": "ava",
    "build": "npm run clean && npm-run-all build:*",
    "build:assets": "cpx \"./{src,tests}/**/*.!(ts)\" dist",
    "build:ts": "tsc --outDir dist",
    "clean": "rimraf dist",
    "lint": "eslint --ext md --ext ts --ignore-pattern dist/* .",
    "site": "node dist/src/bin/sonar",
    "test": "npm run lint && npm run build && nyc ava",
    "test-on-travis": "npm run test -- --concurrency 1 --timeout 5m",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch",
    "watch:resources": "npm run build:assets -- -w --no-initial"
  },
  "repository": "MicrosoftEdge/Sonar",
  "keywords": [
    "best",
    "practices",
    "security",
    "a11y",
    "lint"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": "https://github.com/MicrosoftEdge/Sonar/issues",
  "homepage": "https://github.com/MicrosoftEdge/Sonar#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "chrome-remote-interface": "^0.19.1",
    "debug": "^2.6.1",
    "eslint": "^3.19.0",
    "eventemitter2": "^4.1.0",
    "file-url": "^2.0.2",
    "globby": "^6.1.0",
    "iconv-lite": "^0.4.15",
    "is-my-json-valid": "^2.15.0",
    "is-resolvable": "^1.0.0",
    "jsdom": "^9.11.0",
    "json-stable-stringify": "^1.0.1",
    "lockfile": "^1.0.3",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "optionator": "^0.8.2",
    "path-is-inside": "^1.0.2",
    "pify": "^2.3.0",
    "request": "^2.79.0",
    "require-uncached": "^1.0.3",
    "shelljs": "^0.7.6",
    "strip-bom": "^3.0.0",
    "strip-json-comments": "^2.0.1",
    "text-table": "^0.2.0",
    "user-home": "^2.0.0",
    "which": "^1.2.14"
  },
  "devDependencies": {
    "@types/node": "^7.0.5",
    "async-retry": "^0.3.0",
    "ava": "^0.18.2",
    "babel-cli": "^6.23.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-register": "^6.23.0",
    "cpx": "^1.5.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-markdown": "^1.0.0-beta.4",
    "eslint-plugin-typescript": "^0.1.0",
    "express": "^4.15.2",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.1.2",
    "proxyquire": "^1.7.11",
    "rimraf": "^2.6.1",
    "sinon": "^2.1.0",
    "typedoc": "^0.5.7",
    "typescript": "^2.2.2",
    "typescript-eslint-parser": "^2.1.0"
  },
  "ava": {
    "babel": {
      "presets": []
    },
    "files": [
      "dist/tests/**/*.js"
    ],
    "failFast": false,
    "concurrency": 5,
    "timeout": "1m"
  },
  "nyc": {
    "cache": true,
    "check-coverage": true,
    "lines": 85,
    "statements": 85,
    "functions": 80,
    "branches": 75,
    "include": [
      "dist/src/**/*.js"
    ],
    "sourceMap": true,
    "instrument": true,
    "reporter": [
      "lcov",
      "text"
    ]
  }
}